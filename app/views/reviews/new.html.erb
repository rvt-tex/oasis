
<% if @review.appointment %>
<h1>New Review for <%= @review.appointment.treatment %>!</h1>
<% else %>
<h1>New Review!</h1>
<% end %>



<%= render partial: "layouts/errors", locals: {object: @review} %>

<%= form_for([@review.appointment,@review]) do |f|%>

 <% if !@review.appointment %>
  <%= f.label :appointment %>
  <%= f.collection_select :appointment_id, current_client.appointments.all, :id, :desired_date %>
<% else %>
    <%= f.hidden_field :appointment_id %>
<% end %>

<br><br>

<%= f.label :comment %><br>
<%= f.text_area :comment %>

<br><br>
  <%= f.submit %>

<% end %>				
					

